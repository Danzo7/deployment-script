{
  "name": "deployment-manager",
  "version": "1.3.0",
  "description": "A command-line tool designed to manage the deployment and status of Next.js and NestJS applications using PM2.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "dm": "./dist/cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "deploy": "node dist/cli.js",
    "pkg": "pkg .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "license": "MIT",
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "chalk": "^5.6.1",
    "cli-table3": "^0.6.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "execa": "^9.5.1",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "lowdb": "^7.0.1",
    "pkg": "^5.8.1",
    "pm2": "^5.4.3",
    "portfinder": "^1.0.32",
    "rimraf": "^6.0.1",
    "shelljs": "^0.8.5",
    "simple-git": "^3.27.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.1",
    "@types/shelljs": "^0.8.15",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0"
  },
  "pkg": {
    "scripts": "dist/cli.js",
    "targets": [
      "node16-win-x64"
    ],
    "outputPath": "./build"
  }
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Application {
  id         Int       @id
  name       String    @unique
  createdAt  DateTime  @default(now())
  updatedAt  DateTime
  port       Int       @unique
  instances  Int       @default(1)
  repo       String
  envDir     String?
  lastDeploy DateTime?
}

model Config {
  id     Int    @id
  appDir String
}
